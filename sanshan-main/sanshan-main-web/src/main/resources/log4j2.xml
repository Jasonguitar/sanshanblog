<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="off" monitorInterval="30">
    <Appenders>
        <NoSql name="mongoAppender" > <!--建议bufferSize配置,减少频繁写操作。 -->
            <MongoDb databaseName="logs" collectionName="sanshan-main-logs" server="mongo" port="27017"/>
        </NoSql>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} %5p %c{1}:%L - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>

        <!--<Logger name="org" level="info">-->
            <!--<appender-ref ref="mongoAppender"/>-->
            <!--<appender-ref ref="STDOUT" />-->
        <!--</Logger>-->

        <!--<Logger name="xyz.sanshan.main" level="info">-->
            <!--<appender-ref ref="mongoAppender"/>-->
            <!--<appender-ref ref="STDOUT" />-->
        <!--</Logger>-->

        <root level="info">
            <appender-ref ref="mongoAppender"/>
            <appender-ref ref="STDOUT" />
        </root>
    </Loggers>
</Configuration>